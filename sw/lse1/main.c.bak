__error__(char *pcFilename, uint32_t ui32Line)
{
}
#endif

#define STOP 7
#define S1 0
#define S2 1
#define S3 2
#define S4 3
#define S5 4
#define S6 5



void updateClosedLoopState(void){

    // Read comparator pins
    int A = MAP_GPIOPinRead(GPIO_PORTC_BASE, GPIO_PIN_4); // Comp1;
    int B = MAP_GPIOPinRead(GPIO_PORTC_BASE, GPIO_PIN_6); // Comp2;
    int C = MAP_GPIOPinRead(GPIO_PORTF_BASE, GPIO_PIN_2); // Comp3;

    // Write corresponding values onto GPIOs
    MAP_PWMOutputState(PWM0_BASE, PWM_OUT_3_BIT, A * not(B)); // 1A
    MAP_PWMOutputState(PWM0_BASE, PWM_OUT_5_BIT, B * not(C)); // 2A
    MAP_PWMOutputState(PWM1_BASE, PWM_OUT_2_BIT, C * not(A)); // 3A
    
    MAP_GPIOPinWrite(PWM0_BASE, PWM_OUT_4_BIT, not(A) * B); // 1B
    MAP_GPIOPinWrite(PWM0_BASE, PWM_OUT_2_BIT, not(B) * C); // 2B
    MAP_GPIOPinWrite(PWM1_BASE, PWM_OUT_3_BIT, not(C) * A); // 3B
    

}




// Configura sortides de GPIOs pels sis estats d'alimentaci√≥ del motor
void updateState(int state){
    switch (state)
    {
        case STOP:
            MAP_PWMOutputState(PWM0_BASE, PWM_OUT_3_BIT, false); // 1A
            MAP_PWMOutputState(PWM0_BASE, PWM_OUT_5_BIT, false); // 2A
            MAP_PWMOutputState(PWM1_BASE, PWM_OUT_2_BIT, false); // 3A
            
            MAP_GPIOPinWrite(PWM0_BASE, PWM_OUT_4_BIT, false); // 1B
            MAP_GPIOPinWrite(PWM0_BASE, PWM_OUT_2_BIT, false); // 2B
            MAP_GPIOPinWrite(PWM1_BASE, PWM_OUT_3_BIT, false); // 3B
            break;
            
        case S1:
            MAP_PWMOutputState(PWM0_BASE, PWM_OUT_3_BIT, true); // 1A
            MAP_PWMOutputState(PWM0_BASE, PWM_OUT_5_BIT, false); // 2A
            MAP_PWMOutputState(PWM1_BASE, PWM_OUT_2_BIT, false); // 3A
            
            MAP_GPIOPinWrite(PWM0_BASE, PWM_OUT_4_BIT, false); // 1B
            MAP_GPIOPinWrite(PWM0_BASE, PWM_OUT_2_BIT, true); // 2B
            MAP_GPIOPinWrite(PWM1_BASE, PWM_OUT_3_BIT, false); // 3B
            break;
            
        case S2:
            MAP_PWMOutputState(PWM0_BASE, PWM_OUT_3_BIT, true); // 1A
            MAP_PWMOutputState(PWM0_BASE, PWM_OUT_5_BIT, false); // 2A
            MAP_PWMOutputState(PWM1_BASE, PWM_OUT_2_BIT, false); // 3A
            
            MAP_GPIOPinWrite(PWM0_BASE, PWM_OUT_4_BIT, false); // 1B
            MAP_GPIOPinWrite(PWM0_BASE, PWM_OUT_2_BIT, false); // 2B
            MAP_GPIOPinWrite(PWM1_BASE, PWM_OUT_3_BIT, true); // 3B
            break;
            
        case S3:
            MAP_PWMOutputState(PWM0_BASE, PWM_OUT_3_BIT, false); // 1A
            MAP_PWMOutputState(PWM0_BASE, PWM_OUT_5_BIT, true); // 2A
            MAP_PWMOutputState(PWM1_BASE, PWM_OUT_2_BIT, false); // 3A
            
            MAP_GPIOPinWrite(PWM0_BASE, PWM_OUT_4_BIT, false); // 1B
            MAP_GPIOPinWrite(PWM0_BASE, PWM_OUT_2_BIT, false); // 2B
            MAP_GPIOPinWrite(PWM1_BASE, PWM_OUT_3_BIT, true); // 3B
            break;
            
        case S4:
            MAP_PWMOutputState(PWM0_BASE, PWM_OUT_3_BIT, false); // 1A
            MAP_PWMOutputState(PWM0_BASE, PWM_OUT_5_BIT, true); // 2A
            MAP_PWMOutputState(PWM1_BASE, PWM_OUT_2_BIT, false); // 3A
            
            MAP_GPIOPinWrite(PWM0_BASE, PWM_OUT_4_BIT, true); // 1B
            MAP_GPIOPinWrite(PWM0_BASE, PWM_OUT_2_BIT, false); // 2B
            MAP_GPIOPinWrite(PWM1_BASE, PWM_OUT_3_BIT, false); // 3B
            break;
            
        case S5:
            MAP_PWMOutputState(PWM0_BASE, PWM_OUT_3_BIT, false); // 1A
            MAP_PWMOutputState(PWM0_BASE, PWM_OUT_5_BIT, false); // 2A
            MAP_PWMOutputState(PWM1_BASE, PWM_OUT_2_BIT, true); // 3A
            
            MAP_GPIOPinWrite(PWM0_BASE, PWM_OUT_4_BIT, true); // 1B
            MAP_GPIOPinWrite(PWM0_BASE, PWM_OUT_2_BIT, false); // 2B
            MAP_GPIOPinWrite(PWM1_BASE, PWM_OUT_3_BIT, false); // 3B
            break;
            
        case S6:
            MAP_PWMOutputState(PWM0_BASE, PWM_OUT_3_BIT, false); // 1A
            MAP_PWMOutputState(PWM0_BASE, PWM_OUT_5_BIT, false); // 2A
            MAP_PWMOutputState(PWM1_BASE, PWM_OUT_2_BIT, true); // 3A
            
            MAP_GPIOPinWrite(PWM0_BASE, PWM_OUT_4_BIT, false); // 1B
            MAP_GPIOPinWrite(PWM0_BASE, PWM_OUT_2_BIT, true); // 2B
            MAP_GPIOPinWrite(PWM1_BASE, PWM_OUT_3_BIT, false); // 3B
            break;
    }
}


int
main(void)
{
    // Set the clocking to run directly from the external crystal/oscillator.
    MAP_SysCtlClockSet(SYSCTL_SYSDIV_1 | SYSCTL_USE_OSC | SYSCTL_OSC_MAIN |
                       SYSCTL_XTAL_16MHZ);

    // Set the PWM clock to the system clock.
    MAP_SysCtlPWMClockSet(SYSCTL_PWMDIV_1);


    // The PWM peripheral must be enabled for use.
    // Habilitem els moduls 0 i 1 pq els necessitem els dos
    MAP_SysCtlPeripheralEnable(SYSCTL_PERIPH_PWM0);
    MAP_SysCtlPeripheralEnable(SYSCTL_PERIPH_PWM1);

    // Enable the GPIO port that is used for the PWM output.
    MAP_SysCtlPeripheralEnable(SYSCTL_PERIPH_GPIOA);
    MAP_SysCtlPeripheralEnable(SYSCTL_PERIPH_GPIOB);
    MAP_SysCtlPeripheralEnable(SYSCTL_PERIPH_GPIOE);

    // Configure the PWM function for this pin
    // PWM1
    MAP_GPIOPinConfigure(GPIO_PB5_M0PWM3);
    MAP_GPIOPinTypePWM(GPIO_PORTB_BASE, GPIO_PIN_5);
    //MAP_GPIOPinConfigure(GPIO_PE4_M0PWM4);
    //MAP_GPIOPinTypePWM(GPIO_PORTE_BASE, GPIO_PIN_4);
    // PWM2
    MAP_GPIOPinConfigure(GPIO_PE5_M0PWM5);
    MAP_GPIOPinTypePWM(GPIO_PORTE_BASE, GPIO_PIN_5);
    //MAP_GPIOPinConfigure(GPIO_PB4_M0PWM2);
    //MAP_GPIOPinTypePWM(GPIO_PORTB_BASE, GPIO_PIN_4);
    // PWM3
    MAP_GPIOPinConfigure(GPIO_PA6_M1PWM2);
    MAP_GPIOPinTypePWM(GPIO_PORTA_BASE, GPIO_PIN_6);
    //MAP_GPIOPinConfigure(GPIO_PA7_M1PWM3);
    //MAP_GPIOPinTypePWM(GPIO_PORTA_BASE, GPIO_PIN7);


    // Enable Low GPIOs
    MAP_GPIOPinTypeGPIOOutput(GPIO_PORTE_BASE, GPIO_PIN_4); // 1B
    MAP_GPIOPinTypeGPIOOutput(GPIO_PORTB_BASE, GPIO_PIN_4); // 2B
    MAP_GPIOPinTypeGPIOOutput(GPIO_PORTA_BASE, GPIO_PIN_7); // 3B


    // Enable comparator GPIOs
    MAP_GPIOPinTypeGPIOInput(GPIO_PORTC_BASE, GPIO_PIN_4); // Comp1
    MAP_GPIOPinTypeGPIOInput(GPIO_PORTC_BASE, GPIO_PIN_6); // Comp2
    MAP_GPIOPinTypeGPIOInput(GPIO_PORTF_BASE, GPIO_PIN_2); // Comp3


    // Configure PWM0 to count up/down without synchronization.
    MAP_PWMGenConfigure(PWM0_BASE, PWM_GEN_1, PWM_GEN_MODE_UP_DOWN |
                        PWM_GEN_MODE_NO_SYNC); // 1A, 2B
    MAP_PWMGenConfigure(PWM0_BASE, PWM_GEN_2, PWM_GEN_MODE_UP_DOWN |
                        PWM_GEN_MODE_NO_SYNC); // 1B, 2A

    MAP_PWMGenConfigure(PWM1_BASE, PWM_GEN_1, PWM_GEN_MODE_UP_DOWN |
                        PWM_GEN_MODE_NO_SYNC); // 3A
    MAP_PWMGenConfigure(PWM1_BASE, PWM_GEN_2, PWM_GEN_MODE_UP_DOWN |
                        PWM_GEN_MODE_NO_SYNC); // 3B

    // Set the PWM period to 250Hz.  To calculate the appropriate parameter
    // use the following equation: N = (1 / f) * SysClk.  Where N is the
    // function parameter, f is the desired frequency, and SysClk is the
    // system clock frequency.
    int pwm_freq = 250;
    MAP_PWMGenPeriodSet(PWM0_BASE, PWM_GEN_1, (SysCtlClockGet() / pwm_freq));

    //
    // Set PWM0 to a duty cycle of 25%.  You set the duty cycle as a function
    // of the period.  Since the period was set above, you can use the
    // PWMGenPeriodGet() function.  For this example the PWM will be high for
    // 25% of the time or (PWM Period / 4).
    //
    // MAP_PWMPulseWidthSet(PWM0_BASE, PWM_OUT_3, // DEPEN DEL PIN
    //                      MAP_PWMGenPeriodGet(PWM0_BASE, PWM_GEN_1) / 4);
    float duty = 0.5;
    MAP_PWMPulseWidthSet(PWM0_BASE, PWM_OUT_3, duty / pwm_freq);

    //
    // Enable PWM Out Bit 3 (PB5) output signal.
    //
    MAP_PWMOutputState(PWM0_BASE, PWM_OUT_3_BIT, true); // PB5 (M0PWM3)
    MAP_PWMOutputState(PWM0_BASE, PWM_OUT_5_BIT, true); // PE5 (M0PWM5)
    MAP_PWMOutputState(PWM1_BASE, PWM_OUT_2_BIT, true); // PA6 (M1PWM2)
    
    // MAP_PWMOutputState(PWM0_BASE, PWM_OUT_4_BIT, true); // PE4 (M0PWM4)
    // MAP_PWMOutputState(PWM0_BASE, PWM_OUT_2_BIT, true); // PB4 (M0PWM2)
    // MAP_PWMOutputState(PWM1_BASE, PWM_OUT_3_BIT, true); // PA7 (M1PWM3)
    
    //
    // Enable the PWM generator block.
    //
    MAP_PWMGenEnable(PWM0_BASE, PWM_GEN_1);
    MAP_PWMGenEnable(PWM0_BASE, PWM_GEN_2);
    MAP_PWMGenEnable(PWM1_BASE, PWM_GEN_1);
    MAP_PWMGenEnable(PWM1_BASE, PWM_GEN_2);

    int state = 7;
    updateState(state);

    //
    // Loop forever while the PWM signals are generated.
    //
    while(1)
    {
        state += 1;
        state %= 6;

        updateState(state);

        //
        // This function provides a means of generating a constant length
        // delay.  The function delay (in cycles) = 3 * parameter.  Delay
        // 2 seconds arbitrarily.
        //
        MAP_SysCtlDelay((MAP_SysCtlClockGet() * 0.002) / 3);

        //
        // Invert PWM0 signal.
        //
        //MAP_PWMOutputInvert(PWM0_BASE, PWM_OUT_3_BIT, true); // PB5 (M0PWM3)
        //MAP_PWMOutputInvert(PWM0_BASE, PWM_OUT_4_BIT, true); // PE4 (M0PWM4)
        //MAP_PWMOutputInvert(PWM0_BASE, PWM_OUT_5_BIT, true); // PE5 (M0PWM5)
        //MAP_PWMOutputInvert(PWM0_BASE, PWM_OUT_2_BIT, true); // PB4 (M0PWM2)
        //MAP_PWMOutputInvert(PWM1_BASE, PWM_OUT_2_BIT, true); // PA6 (M1PWM2)
        //MAP_PWMOutputInvert(PWM1_BASE, PWM_OUT_3_BIT, true); // PA7 (M1PWM3)

        //
        // This function provides a means of generating a constant length
        // delay.  The function delay (in cycles) = 3 * parameter.  Delay
        // 2 seconds arbitrarily.
        //
        //MAP_SysCtlDelay((MAP_SysCtlClockGet() * 2) / 3);

        //
        // Switch PWM0 signal back to regular operation.
        //
        //MAP_PWMOutputInvert(PWM0_BASE, PWM_OUT_3_BIT, false); // PB5 (M0PWM3)
        //MAP_PWMOutputInvert(PWM0_BASE, PWM_OUT_4_BIT, false); // PE4 (M0PWM4)
        //MAP_PWMOutputInvert(PWM0_BASE, PWM_OUT_5_BIT, false); // PE5 (M0PWM5)
        //MAP_PWMOutputInvert(PWM0_BASE, PWM_OUT_2_BIT, false); // PB4 (M0PWM2)
        //MAP_PWMOutputInvert(PWM1_BASE, PWM_OUT_2_BIT, false); // PA6 (M1PWM2)
        //MAP_PWMOutputInvert(PWM1_BASE, PWM_OUT_3_BIT, false); // PA7 (M1PWM3)
    }
}
